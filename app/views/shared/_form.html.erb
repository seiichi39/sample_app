<%= form_with(model: @article, local: true) do |f| %>
  <%= render 'shared/error_messages', object: @article %>

  <%= f.label :title, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :title, class: "form-control" %>

  <%= f.label :content, class: "label-#{yield(:class_text)}" %>
  <%= f.text_area :content, class: "form-control" %>

  <%= f.label :image, class: "label-#{yield(:class_text)}" %><br />
  <%= f.file_field :image, class: "image" %><br />
  <h6><%= f.check_box :remove_image %>画像を削除する</h6>

  <div class="actions">
    <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %><br />
  </div>

  <%= link_to t('devise.shared.links.back'), :back, class: "back" %>

<% end %>
