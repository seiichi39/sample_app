<div class="container">
  <div class="col-md-10 col-md-offset-2">
  <h1><%= t('.change_your_password') %></h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <%= f.label :password, t('.new_password'), class: "label-login" %><br />
    <% if @minimum_password_length %>
      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>

    <%= f.label :password_confirmation, t('.confirm_new_password'), class: "label-login" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>

    <div class="actions">
      <%= f.submit t('.change_my_password'), class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
  </div>
</div>
